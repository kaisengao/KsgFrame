<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 视图-->
    <com.kaisengao.ksgframe.common.widget.ViewPagerEx
        android:id="@+id/layout_preview_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <FrameLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 页数-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/layout_pager_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/shape_preview_count"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp"
            android:text="@string/preview_count"
            android:textColor="@color/white"
            tools:text="1/2" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/layout_preview_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="center"
        android:tint="@color/color_212121"
        android:src="@drawable/ic_empty"
        android:visibility="gone" />

</FrameLayout>