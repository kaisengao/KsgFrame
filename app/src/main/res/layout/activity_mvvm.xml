<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="MvvmBinding">

        <import type="com.kaisengao.ksgframe.ui.trainee.mvvm.MvvmViewModel" />

        <variable
            name="viewModel"
            type="com.kaisengao.ksgframe.ui.trainee.mvvm.MvvmViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".ui.trainee.mvvm.MvvmActivity">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loadRegister="@{null}"
            app:loadState="@{viewModel.loadState}" />

    </FrameLayout>
</layout>